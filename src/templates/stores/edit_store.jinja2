{% extends 'base.jinja2' %}
{% block content %}
    <div class="page-header">
    <h1>Edit store: {{ store.name }}</h1>
    </div>
    <div class="form-size">
    <form method="post">
        <div class="form-group">
            <label for="name">Store Name</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Store name" value="{{ store.name }}">
        </div>
        <div class="form-group">
            <label for="name">Store URL prefix</label>
            <input type="text" class="form-control" id="url_prefix" name="url_prefix" placeholder="http://..." value="{{ store.url_prefix }}" aria-describedby="storeURLPrefixHelp">
            <span id="storeURLPrefixHelp" class="help-block">All item URLs in this store start this string (e.g. https://www.amazon.com)</span>
        </div>
        <div class="form-group">
            <label for="name">Tag name</label>
            <input type="text" class="form-control" id="tag_name" name="tag_name" placeholder="span" value="{{ store.tag_name }}" aria-describedby="storeTagNameHelp">
            <span id="storeTagNameHelp" class="help-block">The HTML tag of the item that contains the item price (usually <code>span</code>).</span>
        </div>
        <div class="form-group">
            <label for="name">Search query</label>
            <input type="text" class="form-control" id="query" name="query" placeholder='{"id": "price-now"}' value='{{ store.query | tojson }}' aria-describedby="storeSearchQueryHelp">
            <span id="storeSearchQueryHelp" class="help-block">JSON query to find specific tag with price (remember to use double quotes)</span>
        </div>
        <button type="submit" class="btn btn-warning">Save Changes</button>
        <a class="btn btn-default" role="button" href="{{ url_for('stores.store_page',store_id=store._id) }}">Cancel</a>
    </form>
    </div>
{% endblock %}