{% extends 'base.jinja2' %}
{% block content %}
    <div class="page-header">
        <h1>Create New Alert</h1>
    </div>
    <div class="form-size">
    <form method="post" action="{{ url_for('alerts.create_alert') }}">
        <div class="form-group">
            <label for="name">Item Name</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Item name">
        </div>
        <div class="form-group">
            <label for="url">Product URL</label>
            <input type="url" class="form-control" id="url" name="url" placeholder="http:// ...">
        </div>
        <div class="form-group">
            <label for="price_limit">Alert Limit</label>
            <input type="number" class="form-control" id="price_limit" name="price_limit" placeholder="Enter price" aria-describedby="priceLimitBlock">
            <p id="priceLimitBlock" class="help-block">We'll send you an email when the price drops below this amount.</p>
        </div>
        <button type="submit" class="btn btn-success">Create Alert</button>
    </form>
</div>
{% endblock %}