{% extends 'base.jinja2' %}
{% block content %}
    <div class="page-header">
        <h1>Edit Alert for {{ alert.item.name }}</h1>
    </div>
    <div class="form-size">
    <form method="post" action="{{ url_for('alerts.edit_alert', alert_id=alert._id) }}">
         <div class="form-group">
            <label for="name">Item Name</label>
            <input type="text" class="form-control" id="name" name="name" value="{{ alert.item.name }}" disabled>
        </div>
        <div class="form-group">
            <label for="url">Product URL</label>
            <input type="url" class="form-control" id="url" name="url" value="{{ alert.item.url }}" disabled>
        </div>
        <div class="form-group">
            <label for="price_limit">Alert Limit</label>
            <input type="number" class="form-control" id="price_limit" name="price_limit" placeholder="Enter price" value="{{ alert.price_limit }}" aria-describedby="priceLimitBlock">
            <p id="priceLimitBlock" class="help-block">We'll send you an email when the price drops below this amount.</p>
        </div>
        <button type="submit" class="btn btn-warning">Change alert amount</button>
        <a href="{{ url_for('alerts.get_alert_page', alert_id=alert._id) }}" role="button" class="btn btn-default">Cancel</a>
    </form>
</div>
{% endblock %}